<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/train_name"
        style="@style/ItemMainLabelStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:contentDescription="Train Name"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/train_time"
        style="@style/ItemSubLabelStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/train_name"
        android:layout_marginLeft="16dp"
        android:contentDescription="Train arrives"
        android:text="15mins" />

    <TextView
        android:id="@+id/important_info"
        style="@style/ItemSubLabelStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/train_time"
        android:layout_marginLeft="16dp"
        android:contentDescription="important information"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/train_time"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_more_info" />
</RelativeLayout>