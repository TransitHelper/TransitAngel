<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/cardStyle">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/train_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Local(Gilroy-Sf) South Bound #147"
            android:textSize="13sp"
            android:padding="4dp"
            android:drawableLeft="@drawable/train_blue"
            android:gravity="center_vertical"
            android:drawablePadding="6dp"/>

        <LinearLayout
            android:id="@+id/duration_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/train_description"
            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_time"
                android:drawablePadding="6dp"
                android:paddingLeft="4dp"
                android:textStyle="bold"
                android:text="19:00 - 19:45"/>


            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginLeft="4dp"
                android:text="(45 min)"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_below="@+id/duration_container"
                android:layout_weight="1"
                android:paddingTop="3dp"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/on_schedule"
                android:gravity="right|center_vertical"
                android:text="Leaving in 15 min"/>
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>