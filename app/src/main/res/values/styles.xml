<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tabLayoutStyle">
        <item name="android:background">@android:color/white</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabMaxWidth">@dimen/design_tab_max_width</item>
        <item name="tabMinWidth">@dimen/design_tab_scrollable_min_width</item>
        <item name="tabTextAppearance">@style/ItemMainLabelStyle</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
    </style>
    <style name="spinnerStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ItemLabelStyle" parent="style/AppTheme">
        <item name="android:singleLine">true</item>
    </style>

    <style name="ItemMainLabelStyle" parent="style/ItemLabelStyle">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="ItemSubLabelStyle" parent="style/ItemLabelStyle">
        <item name="android:textColor">@color/color_control_normal</item>
        <item name="android:textSize">@dimen/list_item_text_subtitle</item>
    </style>

    <style name="TextTitleStyle" parent="style/ItemLabelStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/list_item_text_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="caption">
        <item name="android:textSize">13sp</item>
        <item name="android:color">@color/gray</item>
    </style>

</resources>
