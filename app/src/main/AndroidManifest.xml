<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.transitangel.transitangel"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />

    <application
        android:name=".TransitAngelApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".home.HomeActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".search.SearchActivity"/>
        <activity android:name=".LocationActivity"/>
        <activity android:name=".schedule.ScheduleActivity"/>
        <activity android:name=".details.DetailsActivity"/>

        <service android:name=".Intent.TransitIntentService"/>
        <service
            android:name=".notifications.DismissService"
            android:exported="false">
        </service>
        <receiver  android:process=":remote" android:name=".details.AlarmBroadcastReceiver"></receiver>
    </application>

</manifest>
